{
    "type": "object",
    "properties": {
        "time_settings": {
            "type": "object",
            "properties": {
                "time_limit_enabled": {"type": "boolean"},
                "inactive_time_seconds": {"type": "integer"},
                "max_response_delay_seconds": {"type": "integer"},
                "activity_start_hour": {"type": "integer"},
                "activity_end_hour": {"type": "integer"},
                "max_consecutive_messages": {"type": "integer"}
            }
        },
        "prompts": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "monitored_groups": {
            "type": "object",
            "properties": {
                "enabled": {"type": "boolean"},
                "groups": {
                    "type": "object",
                    "patternProperties": {
                        "^.*$": {
                            "type": "object",
                            "properties": {
                                "user_ids": {
                                    "type": "array",
                                    "items": {"type": "string"}
                                },
                                "nickname": {"type": "string"},
                                "description": {"type": "string"}
                            },
                            "required": ["user_ids"]
                        }
                    }
                }
            }
        }
    },
    "required": ["time_settings", "prompts", "monitored_groups"]
}
